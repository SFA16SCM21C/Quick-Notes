<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@drawable/note5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teleworld.quicknotes.MainActivity">

    <TextView
        android:layout_width="311dp"
        android:layout_height="32dp"
        android:id="@+id/dateText"
        android:textSize="16sp"
        android:textColor="#E9EAED"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@+id/dataText"
        android:layout_marginBottom="4dp"
        app:layout_constraintVertical_bias="0.13"
        android:layout_marginStart="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="160dp" />

    <Button
        android:text="@string/editbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editbtn"
        android:textColor="#E9EAED"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#4169E1"
        android:onClick="EditClick"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="6dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp" />

    <EditText
        android:layout_width="581dp"
        android:layout_height="234dp"
        android:textSize="18sp"
        android:enabled="false"
        android:scrollIndicators="right|end"
        android:scrollbars="vertical"
        android:ems="10"
        android:id="@+id/dataText"
        android:textColor="#E9EAED"
        tools:ignore="MissingConstraints"
        android:inputType="textMultiLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="@string/image"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:id="@+id/image"
        android:layout_marginEnd="16dp"
        android:background="@drawable/note6"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="@+id/editbtn" />
</android.support.constraint.ConstraintLayout>
